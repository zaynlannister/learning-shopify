<div class="py-8">
    {% paginate blog.articles by section.settings.number_of_blog_posts %}

        <h1 class="text-center text-3xl">{{ blog.title }}</h1>

        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 grid-4">
                {% for article in blog.articles %}
                    <div class="w-full py-6 px-3">
                        <div class="bg-wgite shadow-xl rounded-lg overflow-hidden">
                            <div x-show="{{ section.settings.image_visibility }}">
                                {% if article.image %}
                                    <a href="{{ article.url }}">
                                        <img class="w-full h-80 object-cover" src="{{ article.image | img_url: 'medium' }}" alt="{{ article.image.alt }}">
                                    </a>
                                {% else %}
                                    {{ 'image' |  placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
                                {% endif %}
                            </div>

                            <div class="p-4">
                                <h1 class="text-xl font-medium my-4">{{ article.title }}</h1>
                
                                {% if article.excerpt.size > 0 %}
                                    <p>{{ article.excerpt |  strip_html | truncatewords: 15 }} </p>
                                {% else %}
                                    <p>{{ article.content | strip_html |  truncatewords: 15 }}</p>
                                {% endif %}
    
                                <a href="{{ article.url }}" class="font-medium text-blue-600 hover:text-blue-800 my-4 block">{{ section.settings.blog_read_more }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="max-w-6xl mx-auto">
            {% render 'pagination',  pagination: paginate %}
        </div>
    {% endpaginate %}
</div>

{% schema %}
{
    "name": "Blog",
    "settings": [
        {
            "type": "range",
            "id": "number_of_blog_posts",
            "step": 1,
            "min": 1,
            "max": 6,
            "label": "Blog posts per page",
            "default": 3
        },
        {
          "type": "checkbox",
          "id": "image_visibility",
          "label": "Hide/Show image",
          "default": true
        },
        {
            "type": "text",
            "id": "blog_read_more",
            "label": "Read more label",
            "default": "Read more"
        }
    ]
}
{% endschema %}